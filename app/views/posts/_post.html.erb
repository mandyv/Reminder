<div class="col-sm-6 col-lg-4">
	<div class="card">
		<div class="card-topper" style="background-image: url(https://static.pexel.com/photos/113762/pexels-photo-11376-large.jpeg);">
		
		</div>
		<div class="card-block">
			<h4 class="card-title"><%= link_to post.title, post %></h4>
			<p class="published-date">Published On <%= post.created_at %></p>
			<p class="card-text">
				<%= post.description %>
			</p>
		</div>
	</div>
</div>